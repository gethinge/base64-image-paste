{
  "name": "helloworld",
  "displayName": "HelloWorld",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:helloworld.helloWorld",
    "onCommand:test.test"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "helloworld.helloWorld",
        "title": "Hello World"
      }
    ],
    "keybindings": [
      {
        "command": "helloworld.helloWorld",
        "key": "ctrl+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "helloworld.helloWorld",
          "when": "editorLangId == markdown"
        }
      ],
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "helloworld.helloWorld",
          "group": "navigation@0"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Image",
      "properties": {
        "image.save.enable": {
          "type": "boolean",
          "default": true,
          "description": "是否保存图片至本地"
        },
        "image.storage.dir": {
          "type": "string",
          "default": "images",
          "description": "本地图片保存目录"
        },
        "image.auto.compress.enable": {
          "type": "boolean",
          "default": false,
          "description": "是否自动压缩图片"
        },
        "image.auto.compress.threshold": {
          "type": "number",
          "default": 1000,
          "description": "图片自动压缩阈值,单位px"
        },
        "image.name": {
          "type":"string",
          "default":"",
          "description": "本地保存图片名称，为空表示文件名-索引"
        },
        "image.auto.sort.enable": {
          "type":"boolean",
          "default":true,
          "description": "保存文件时是否自动整理图片索引"
        },
        "image.name.manual.enable": {
          "type":"boolean",
          "default":false,
          "description": "是否手动命名图片"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.1.0"
  }
}
